piperline {
    agent any
    tools {
        nodejs 'node'
    }
    stages {
        stage('Build') {
            steps {
                sh 'npm install'
            }
            stage('Test') { 
                steps {
                    sh 'npm test || echo "No tests defined"'
                }
            }
            stage('Run') {
                steps {
                    sh 'npm run build'
                }
            }
        }
    }
}
